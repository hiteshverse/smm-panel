<script>
$(document).ready(function(){
var method_id = $("#payment_method").val();
if(method_id == 14){
$("#addfund_fields").html('<center><img width="100%" src="{{ PaytmQRimage }}"></center><div class="form-group col-md-12"><label for="method" class="control-label">Order ID</label><input class="form-control" name="paytmqr_orderid" value="{{ data['paytmqr_orderid'] }}"></div><div class="form-group col-md-12"><label for="method" class="control-label">Amount</label><input class="form-control" name="payment_amount" value="{{ data['payment_amount'] }}"></div><input type="hidden" class="form-control" name="payment_type" value="14"><div class="col-md-"><button type="submit" class="btn btn-block btn-big-primary"">Submit</button></div>');
}
if(method_id == 39){
