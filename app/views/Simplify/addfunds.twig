    <div class="wrapper-content__body">
      <!-- Main variables *content* -->
      <div id="block_93">
    <div class="addfunds-block ">
        <div class="bg"></div>
        <div class="divider-top"></div>
        <div class="divider-bottom"></div>
        <div class="container">
            <div class="row">
                {% if contentText %}
<div class="col-lg-12 mt-2">
<div class="card mb-2">
{{ contentText }}
</div></div>
